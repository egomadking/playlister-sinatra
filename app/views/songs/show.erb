<!DOCTYPE html>
<html>
  <head>

    <meta charset="UTF-8">

    <title><%= @song.name%></title>

  </head>

  <body>
    <% if flash.has?(:message) %>
      <%= flash[:message] %>
    <% end %>
    <h1><%= @song.name %></h1>
    <h2>Artist: <a href="/artists/<%= @song.artist.slug %>"><%= @song.artist.name %></a></h2>
    <h2>Genre:</h2>
    <% @song.genres.each do |g| %>
      <a href="/genres/<%= g.slug %>"><%= g.name %></a>
    <% end %>


  </body>

</html>